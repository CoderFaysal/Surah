<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/BUTTON_ITEMS"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        >

        <ImageView
            android:id="@+id/back_to_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_marginRight="10dp"
            style="@style/ICON_COLOR"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আরবী ও বাংলা উচ্চারণ"
            android:textSize="22sp"
            android:fontFamily="@font/kalpurush"
            android:padding="10dp"
            style="@style/TX_COLOR"

            />


    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:id="@+id/main_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:clickable="true"
            style="@style/CARD_ITEM"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/mainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="বাংলা ঃ"
                    android:textSize="20sp"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/noirrit"
                    style="@style/TEXT_COLOR"
                    android:textIsSelectable="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/arabicText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="বাংলা ঃ"
                    android:textSize="18sp"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="12dp"
                    android:fontFamily="@font/noirrit"
                    style="@style/TEXT_COLOR"
                    android:textIsSelectable="true"
                    />


                <TextView
                    android:id="@+id/banglaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="বাংলা ঃ"
                    android:textSize="18sp"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/kalpurush"
                    style="@style/TEXT_COLOR"
                    android:layout_marginBottom="7dp"
                    android:textIsSelectable="true"
                    />




            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            style="@style/CARD_ITEM"
            android:weightSum="6"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/it_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ICON_COPY"
                android:layout_weight="2"
                android:gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />


            <ImageView
                android:id="@+id/it_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ICON_LOVE"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />


            <ImageView
                android:id="@+id/it_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ICON"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>